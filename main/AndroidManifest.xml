<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/drone"
        android:label="Messenger"
        android:roundIcon="@drawable/drone"
        android:supportsRtl="true"
        android:theme="@style/Theme.Messanger"
        tools:targetApi="32">

        <activity
            android:name=".MessegerActivity"
            android:windowSoftInputMode="adjustResize"
            android:exported="false" />
        <activity
            android:name=".AddingFriends"
            android:exported="false" />
        <activity
            android:name=".GetFriends"
            android:exported="false" />
        <activity
            android:name=".AllStuff"
            android:exported="false"
            android:label="@string/title_activity_all_stuff"
            android:theme="@style/Theme.Messanger" />
        <activity
            android:name=".Registration"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>